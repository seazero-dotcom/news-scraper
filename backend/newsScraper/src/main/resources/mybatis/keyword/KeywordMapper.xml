<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doubledowninteractive.news.keyword.repository.KeywordMapper">

    <resultMap id="KeywordMap" type="com.doubledowninteractive.news.keyword.domain.Keyword">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="word" column="word"/>
        <result property="enabled" column="enabled"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAll" parameterType="java.lang.Long" resultMap="KeywordMap">
        SELECT * FROM keywords
        WHERE user_id = #{userId}
        ORDER BY id DESC
    </select>

    <select id="findAllEnabled" parameterType="java.lang.Long" resultMap="KeywordMap">
        SELECT * FROM keywords
        WHERE user_id = #{userId} AND enabled = 1
        ORDER BY id ASC
    </select>

    <select id="findByWord"  parameterType="com.doubledowninteractive.news.keyword.dto.KeywordDto" resultMap="KeywordMap">
        SELECT * FROM keywords
        WHERE user_id = #{userId} AND word = #{word}
            LIMIT 1
    </select>

    <insert id="insert"  parameterType="com.doubledowninteractive.news.keyword.dto.KeywordDto">
        INSERT INTO keywords (user_id, word, enabled)
        VALUES (#{userId}, #{word}, 1)
    </insert>

    <update id="updateEnabled"  parameterType="com.doubledowninteractive.news.keyword.dto.KeywordDto">
        UPDATE keywords
        SET enabled = #{enabled}
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <delete id="deleteById" parameterType="com.doubledowninteractive.news.keyword.dto.KeywordDto">
        DELETE FROM keywords
        WHERE id = #{id} AND user_id = #{userId}
    </delete>
</mapper>
